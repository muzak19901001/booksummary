<div class="search">
  <div class="row">
    <div class="text-center">
      <%= form_tag(articles_path, method: :get, class: 'form-inline') do %>
        <div class="form-group">
          <%= text_field_tag :title, @title, class: 'form-control input-lg', placeholder: "キーワードを入力", sixe: 40 %> 
        </div>
        <%= submit_tag '検索', class: 'btn btn-success btn-lg' %>
      <% end %>
    </div>
  </div>
</div>

<%= render 'books', articles: @articles %>
